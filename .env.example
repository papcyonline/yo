# Server Configuration
NODE_ENV=development
PORT=9002
BASE_URL=http://localhost:9002
CLIENT_URL=http://localhost:8081
SESSION_SECRET=generate_secure_secret_here_use_crypto_randomBytes

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/yofam
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=generate_64_byte_hex_string_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=generate_another_64_byte_hex_string_here

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# AI Service Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key
OPENAI_API_KEY=your_openai_api_key
AI_SERVICE_URL=http://localhost:8000

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# OAuth Configuration (for social login)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Redis Configuration (for caching and queues)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Vapi.ai Configuration (for voice features)
EXPO_PUBLIC_VAPI_API_KEY=your_vapi_api_key

# Security Note:
# To generate secure secrets, run this in Node.js:
# require('crypto').randomBytes(64).toString('hex')